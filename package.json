{
  "name": "html2rss",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Tool for conversion basic HTML pages to RSS XML.",
  "author": "Jan Krivohlavek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krajvy/html2rss/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krajvy/html2rss.git"
  },
  "scripts": {
    "clean": "rm -rf dist/* && rm -rf build/*",
    "build": "tsc",
    "generate": "cp public/* build && node dist/index.js",
    "start": "npm run clean && npm run build && npm run generate",
    "test": "jest ./src",
    "format-check": "prettier --check .",
    "format-fix": "prettier --write ."
  },
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "dependencies": {
    "jsdom": "^26.1.0",
    "moment-timezone": "^0.6.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
