{
  "name": "html2rss",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Tool for conversion basic HTML pages to RSS XML.",
  "author": "Jan Krivohlavek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krajvy/html2rss/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krajvy/html2rss.git"
  },
  "scripts": {
    "clean": "rm -rf dist/* && rm -rf build/*",
    "build": "tsc",
    "generate": "cp public/* build && node dist/index.js",
    "start": "npm run clean && npm run build && npm run generate",
    "test": "jest ./src",
    "format-check": "prettier --check .",
    "format-fix": "prettier --write ."
  },
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "dependencies": {
    "jsdom": "^25.0.1",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^16.18.119",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^4.9.5"
  }
}
